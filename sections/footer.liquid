{%- style -%}
  .footer {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .footer {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .footer__content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media screen and (min-width: 750px) {
    .footer__content {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .footer__column {
    text-align: center;
  }

  @media screen and (min-width: 750px) {
    .footer__column {
      text-align: left;
    }
  }

  .footer__heading {
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: {{ settings.colors_text }};
  }

  .footer__menu {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer__menu-item {
    margin-bottom: 0.5rem;
  }

  .footer__menu-link {
    color: {{ settings.colors_text }};
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer__menu-link:hover {
    color: {{ settings.colors_accent_1 }};
  }

  .footer__newsletter {
    margin-bottom: 2rem;
  }

  .footer__newsletter-form {
    display: flex;
    gap: 0.5rem;
    margin-top: 1rem;
  }

  .footer__newsletter-input {
    flex: 1;
    padding: 0.75rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 0.9rem;
  }

  .footer__newsletter-button {
    background: {{ settings.colors_accent_1 }};
    color: white;
    border: none;
    padding: 0.75rem 1rem;
    border-radius: 4px;
    font-size: 0.9rem;
    cursor: pointer;
    transition: background 0.3s ease;
  }

  .footer__newsletter-button:hover {
    background: {{ settings.colors_accent_2 }};
  }

  .footer__social {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  @media screen and (min-width: 750px) {
    .footer__social {
      justify-content: flex-start;
    }
  }

  .footer__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: {{ settings.colors_accent_1 }};
    color: white;
    border-radius: 50%;
    text-decoration: none;
    transition: background 0.3s ease;
  }

  .footer__social-link:hover {
    background: {{ settings.colors_accent_2 }};
  }

  .footer__payment {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: 2rem;
    flex-wrap: wrap;
  }

  .footer__payment-icon {
    width: 40px;
    height: 25px;
    background: white;
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.8rem;
    font-weight: 600;
    color: #666;
  }

  .footer__bottom {
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid #ddd;
    text-align: center;
    font-size: 0.9rem;
    color: #666;
  }
{%- endstyle -%}

