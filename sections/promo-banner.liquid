{%- style -%}
  .promo-banner {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    position: relative;
    overflow: hidden;
  }

  @media screen and (min-width: 750px) {
    .promo-banner {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .promo-banner__content {
    position: relative;
    z-index: 2;
    text-align: {{ section.settings.desktop_content_alignment }};
    padding: 2rem;
  }

  @media screen and (max-width: 749px) {
    .promo-banner__content {
      text-align: {{ section.settings.mobile_content_alignment }};
    }
  }

  .promo-banner__heading {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: white;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
  }

  .promo-banner__subheading {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    color: white;
    text-shadow: 1px 1px 2px rgba(0,0,0,0.5);
  }

  .promo-banner__button {
    background: {{ settings.colors_accent_1 }};
    color: white;
    padding: 1rem 2rem;
    border: none;
    border-radius: 4px;
    font-size: 1.1rem;
    font-weight: 600;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
  }

  .promo-banner__button:hover {
    background: {{ settings.colors_accent_2 }};
    transform: translateY(-2px);
  }

  .promo-banner__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .promo-banner__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,{{ section.settings.image_overlay_opacity | divided_by: 100.0 }});
    z-index: 1;
  }

  @media screen and (max-width: 749px) {
    .promo-banner__heading {
      font-size: 2rem;
    }
    
    .promo-banner__subheading {
      font-size: 1rem;
    }
  }
{%- endstyle -%}

<div class="promo-banner color-{{ section.settings.color_scheme }} gradient" {{ section.shopify_attributes }}>
  {%- if section.settings.image != blank -%}
    <img
      src="{{ section.settings.image | image_url: width: 1920 }}"
      alt="{{ section.settings.image.alt | escape }}"
      class="promo-banner__image"
      loading="lazy"
      width="{{ section.settings.image.width }}"
      height="{{ section.settings.image.height }}"
    >
  {%- endif -%}
  
  {%- if section.settings.image_overlay_opacity > 0 -%}
    <div class="promo-banner__overlay"></div>
  {%- endif -%}
  
  <div class="promo-banner__content">
    {%- if section.settings.heading != blank -%}
      <h2 class="promo-banner__heading">{{ section.settings.heading | escape }}</h2>
    {%- endif -%}
    
    {%- if section.settings.subheading != blank -%}
      <p class="promo-banner__subheading">{{ section.settings.subheading | escape }}</p>
    {%- endif -%}
    
    {%- if section.settings.button_label != blank and section.settings.button_link != blank -%}
      <a href="{{ section.settings.button_link }}" class="promo-banner__button">
        {{ section.settings.button_label | escape }}
      </a>
    {%- endif -%}
  </div>
</div>

