{%- style -%}
  .testimonials {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .testimonials {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .testimonials__heading {
    text-align: {{ section.settings.heading_alignment }};
    margin-bottom: 3rem;
  }

  .testimonials__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media screen and (min-width: 750px) {
    .testimonials__grid {
      grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
    }
  }

  .testimonial-card {
    background: white;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    text-align: {{ section.settings.text_alignment }};
    position: relative;
  }

  .testimonial-card__rating {
    display: flex;
    justify-content: center;
    margin-bottom: 1rem;
    gap: 0.25rem;
  }

  .testimonial-card__star {
    color: #ffd700;
    font-size: 1.2rem;
  }

  .testimonial-card__text {
    font-size: 1.1rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    color: {{ settings.colors_text }};
    font-style: italic;
  }

  .testimonial-card__author {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }

  .testimonial-card__avatar {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    object-fit: cover;
  }

  .testimonial-card__author-info {
    text-align: left;
  }

  .testimonial-card__name {
    font-weight: 600;
    margin-bottom: 0.25rem;
    color: {{ settings.colors_text }};
  }

  .testimonial-card__title {
    font-size: 0.9rem;
    color: #666;
  }

  .testimonial-card__quote {
    position: absolute;
    top: 1rem;
    left: 1rem;
    font-size: 3rem;
    color: {{ settings.colors_accent_1 }};
    opacity: 0.3;
    line-height: 1;
  }
{%- endstyle -%}

<div class="testimonials color-{{ section.settings.color_scheme }} gradient" {{ section.shopify_attributes }}>
  <div class="page-width">
    {%- if section.settings.heading != blank -%}
      <div class="testimonials__heading">
        <h2 class="title {{ section.settings.heading_size }}">{{ section.settings.heading | escape }}</h2>
      </div>
    {%- endif -%}

    <div class="testimonials__grid">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'testimonial' -%}
            <div class="testimonial-card" {{ block.shopify_attributes }}>
              <div class="testimonial-card__quote">"</div>
              
              {%- if block.settings.rating > 0 -%}
                <div class="testimonial-card__rating">
                  {%- for i in (1..5) -%}
                    {%- if i <= block.settings.rating -%}
                      <span class="testimonial-card__star">★</span>
                    {%- else -%}
                      <span class="testimonial-card__star">☆</span>
                    {%- endif -%}
                  {%- endfor -%}
                </div>
              {%- endif -%}
              
              {%- if block.settings.text != blank -%}
                <div class="testimonial-card__text">
                  {{ block.settings.text | escape }}
                </div>
              {%- endif -%}
              
              {%- if block.settings.author != blank -%}
                <div class="testimonial-card__author">
                  {%- if block.settings.image != blank -%}
                    <img
                      src="{{ block.settings.image | image_url: width: 100 }}"
                      alt="{{ block.settings.author | escape }}"
                      class="testimonial-card__avatar"
                      loading="lazy"
                      width="50"
                      height="50"
                    >
                  {%- endif -%}
                  <div class="testimonial-card__author-info">
                    <div class="testimonial-card__name">{{ block.settings.author | escape }}</div>
                    {%- if block.settings.title != blank -%}
                      <div class="testimonial-card__title">{{ block.settings.title | escape }}</div>
                    {%- endif -%}
                  </div>
                </div>
              {%- endif -%}
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.testimonials.name",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Testimonials",
      "label": "t:sections.testimonials.settings.heading.label"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "t:sections.testimonials.settings.heading_alignment.label",
      "options": [
        {
          "value": "left",
          "label": "t:sections.testimonials.settings.heading_alignment.options__1.label"
        },
        {
          "value": "center",
          "label": "t:sections.testimonials.settings.heading_alignment.options__2.label"
        },
        {
          "value": "right",
          "label": "t:sections.testimonials.settings.heading_alignment.options__3.label"
        }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "t:sections.testimonials.settings.text_alignment.label",
      "options": [
        {
          "value": "left",
          "label": "t:sections.testimonials.settings.text_alignment.options__1.label"
        },
        {
          "value": "center",
          "label": "t:sections.testimonials.settings.text_alignment.options__2.label"
        },
        {
          "value": "right",
          "label": "t:sections.testimonials.settings.text_alignment.options__3.label"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 3,
      "label": "t:sections.testimonials.settings.columns_desktop.label"
    },
    {
      "type": "checkbox",
      "id": "swipe_on_mobile",
      "default": false,
      "label": "t:sections.testimonials.settings.swipe_on_mobile.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.section_padding.content"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "t:sections.testimonials.blocks.testimonial.name",
      "settings": [
        {
          "type": "range",
          "id": "rating",
          "min": 0,
          "max": 5,
          "step": 1,
          "default": 5,
          "label": "t:sections.testimonials.blocks.testimonial.settings.rating.label"
        },
        {
          "type": "textarea",
          "id": "text",
          "default": "Add customer reviews and testimonials to showcase your store's happy customers.",
          "label": "t:sections.testimonials.blocks.testimonial.settings.text.label"
        },
        {
          "type": "text",
          "id": "author",
          "default": "Author's name",
          "label": "t:sections.testimonials.blocks.testimonial.settings.author.label"
        },
        {
          "type": "text",
          "id": "title",
          "default": "Author's title",
          "label": "t:sections.testimonials.blocks.testimonial.settings.title.label"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.testimonials.blocks.testimonial.settings.image.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.testimonials.presets.name",
      "blocks": [
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        }
      ]
    }
  ]
}
{% endschema %}