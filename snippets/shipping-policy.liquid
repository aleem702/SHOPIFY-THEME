{%- liquid
  assign shipping_policy = settings.shipping_policy
  assign show_shipping_policy = settings.show_shipping_policy
-%}

{%- if show_shipping_policy and shipping_policy != blank -%}
  <div class="shipping-policy{% if class %} {{ class }}{% endif %}">
    <div class="shipping-policy__content">
      <svg class="shipping-policy__icon" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path d="M20 8h-3V4H3c-1.1 0-2 .9-2 2v11h2c0 1.66 1.34 3 3 3s3-1.34 3-3h6c0 1.66 1.34 3 3 3s3-1.34 3-3h2v-5l-3-4zM6 18.5c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5zm13.5-9l1.96 2.5H17V9.5h2.5zm-1.5 9c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5z"/>
      </svg>
      <span class="shipping-policy__text">{{ shipping_policy }}</span>
    </div>
  </div>
{%- elsif show_shipping_policy -%}
  <div class="shipping-policy{% if class %} {{ class }}{% endif %}">
    <div class="shipping-policy__content">
      <svg class="shipping-policy__icon" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path d="M20 8h-3V4H3c-1.1 0-2 .9-2 2v11h2c0 1.66 1.34 3 3 3s3-1.34 3-3h6c0 1.66 1.34 3 3 3s3-1.34 3-3h2v-5l-3-4zM6 18.5c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5zm13.5-9l1.96 2.5H17V9.5h2.5zm-1.5 9c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5z"/>
      </svg>
      <span class="shipping-policy__text">Free shipping on orders over $50</span>
    </div>
  </div>
{%- endif -%}

<style>
  .shipping-policy {
    margin: 1rem 0;
  }

  .shipping-policy__content {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    background: #f8f9fa;
    border-radius: 6px;
    font-size: 0.9rem;
    color: {{ settings.colors_text }};
  }

  .shipping-policy__icon {
    width: 20px;
    height: 20px;
    fill: {{ settings.colors_accent_1 }};
    flex-shrink: 0;
  }

  .shipping-policy__text {
    font-weight: 500;
  }

  .shipping-policy--inline {
    display: inline-flex;
    margin: 0 0.5rem;
  }

  .shipping-policy--inline .shipping-policy__content {
    background: transparent;
    padding: 0.25rem 0.5rem;
    font-size: 0.8rem;
  }
</style>