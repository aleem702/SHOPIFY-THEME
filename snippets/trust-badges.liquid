{%- liquid
  assign trust_badges = true
  if settings.trust_badge_1 == blank and settings.trust_badge_2 == blank and settings.trust_badge_3 == blank
    assign trust_badges = false
  endif
-%}

{%- if trust_badges -%}
  <div class="trust-badges{% if class %} {{ class }}{% endif %}">
    {%- if settings.trust_badge_1 != blank -%}
      <div class="trust-badge">
        <svg class="trust-badge__icon" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4z"/>
        </svg>
        <span class="trust-badge__text">{{ settings.trust_badge_1 }}</span>
      </div>
    {%- endif -%}
    
    {%- if settings.trust_badge_2 != blank -%}
      <div class="trust-badge">
        <svg class="trust-badge__icon" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
        </svg>
        <span class="trust-badge__text">{{ settings.trust_badge_2 }}</span>
      </div>
    {%- endif -%}
    
    {%- if settings.trust_badge_3 != blank -%}
      <div class="trust-badge">
        <svg class="trust-badge__icon" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
        <span class="trust-badge__text">{{ settings.trust_badge_3 }}</span>
      </div>
    {%- endif -%}
    
    <!-- Default trust badges if none are set -->
    {%- if settings.trust_badge_1 == blank and settings.trust_badge_2 == blank and settings.trust_badge_3 == blank -%}
      <div class="trust-badge">
        <svg class="trust-badge__icon" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4z"/>
        </svg>
        <span class="trust-badge__text">Secure Checkout</span>
      </div>
      
      <div class="trust-badge">
        <svg class="trust-badge__icon" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
        </svg>
        <span class="trust-badge__text">30-Day Returns</span>
      </div>
      
      <div class="trust-badge">
        <svg class="trust-badge__icon" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
        <span class="trust-badge__text">Free Shipping</span>
      </div>
    {%- endif -%}
  </div>
{%- endif -%}

<style>
  .trust-badges {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin: 2rem 0;
  }

  .trust-badge {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    background: white;
    border: 1px solid #e0e0e0;
    border-radius: 6px;
    font-size: 0.9rem;
    color: {{ settings.colors_text }};
    transition: all 0.3s ease;
  }

  .trust-badge:hover {
    border-color: {{ settings.colors_accent_1 }};
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  }

  .trust-badge__icon {
    width: 20px;
    height: 20px;
    fill: {{ settings.colors_accent_1 }};
  }

  .trust-badge__text {
    font-weight: 500;
  }

  @media screen and (max-width: 749px) {
    .trust-badges {
      flex-direction: column;
      align-items: center;
    }
    
    .trust-badge {
      width: 100%;
      max-width: 300px;
      justify-content: center;
    }
  }
</style>